{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "isSubtle": true,
      "size": "small",
      "type": "TextBlock",
      "text": "Alarm"
    },
    {
      "type": "TextBlock",
      "text": "Breakfast",
      "size": "large"
    },
    {
      "type": "TextBlock",
      "size": "large",
      "text": "10:00 AM",
      "weight": "bolder"
    },
    {
      "isSubtle": true,
      "size": "small",
      "type": "TextBlock",
      "text": "Snooze for"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "snooze",
      "style":"compact",
      "choices": [
        {
          "title": "5 minutes",
          "value": "5",
          "isSelected": true
        },
        {
          "title": "15 minutes",
          "value": "15"
        },
        {
          "title": "30 minutes",
          "value": "30"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Http",
      "method": "POST",
      "url": "http://foo.com",
      "title": "Snooze"
    },
    {
      "type": "Action.Http",
      "method": "POST",
      "url": "http://foo.com",
      "title": "Dismiss"
    }
  ]
}